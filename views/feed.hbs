<!DOCTYPE html>
<br><br><br><br>
<div class="well col-xs-10 col-xs-offset-1" id="help">
	<div class="row col-xs-10 col-xs-offset-1">
		<form class="form-horizontal" role ="form" id="postForm">
			<div class="row">
				<div class="form-group">
					<div class="col-xs-50">
                    <h2>Post a Deed</h2> 
                    <textarea  class="form-control required" style="width:300px; float:left;" rows="1" id="titlePost" placeholder="Title"></textarea>
                    
                    <textarea  class="form-control required" style="width:300px; float:right;" rows="1" id="pricePost" placeholder="Price"></textarea>
                        <br />
                        <br />
                        <textarea  class="form-control required" style="width:300px; float:left;" rows="1" id="locationPost" placeholder="Location"></textarea>
                        
                        <select id="category" style="width:300px; height:40px; float:right;">
                          <option value="" disabled selected>Select Category</option>
                          <option value="Gardening">Gardening</option>
                          <option value="Housework">Housework</option>
                          <option value="Technology">Technology</option>
                          <option value="Cooking">Cooking</option>
                          <option value="Other">Other</option>
                        </select>

                        <br />
                        <textarea class="form-control required" style ="min-width: 100%" rows="3" id="descriptionPost" placeholder="Description" maxlength="140"></textarea>
                        <br />
						<label id="charRemaining" for="inputPost">140</label>
					</div>
				</div>
			</div>
			
			<div class="form-group">
				<div class="col-xs-3 col-sm-offset-9">
					<button type="text" class="btn btn-primary">Post</button>
				</div>
			</div
		</form>
	</div>
</div>


<div class="row col-sm-10 col-sm-offset-1">
	<button type="button" class="btn btn-primary" id="btn-count">
		Deeds <span class="badge badge-light" id="count">0</span>
	</button>
</div>

<div class="row col-sm-12 col-sm-offset-0" id="feedPosts">
</div>